{
  "author": "evan@delicioushat.com>",
  "name": "ah_sentry_plugin",
  "description": "send your errors to Sentry",
  "version": "0.1.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@sentry/apm": "^5.21.1",
    "@sentry/node": "^5.21.1"
  },
  "devDependencies": {
    "actionhero": "23.0.6",
    "ws": "latest",
    "ioredis": "latest",
    "winston": "latest",
    "@types/node": "latest",
    "@types/jest": "latest",
    "jest": "latest",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "postinstall": "npm run build",
    "dev": "ts-node-dev --no-deps --transpile-only ./src/server",
    "debug": "tsc && ts-node-dev --transpile-only --no-deps --inspect -- ./src/server ",
    "start": "node ./dist/server.js",
    "actionhero": "actionhero",
    "test": "jest",
    "pretest": "npm run build && npm run lint",
    "build": "tsc --sourceMap false --declaration",
    "lint": "prettier --check src/*/** __tests__/*/**",
    "pretty": "prettier --write src/*/** __tests__/*/**"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
